<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_scroll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:orientation="horizontal"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/card_margin"
            android:elevation="4dp">

            <TextView
                style="@style/app_bar_text_style"
                android:text="PURPLE"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <ImageButton
                    android:id="@+id/close_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_close_black_24dp"
                    android:backgroundTint="@color/transparent"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/shop_image_top_margin"
            android:src="@drawable/testbanner"
            android:background="@color/black"/>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="180dp"
            android:layout_marginStart="@dimen/shop_info_horizontal_margin"
            android:layout_marginEnd="@dimen/shop_info_horizontal_margin"
            android:layout_marginBottom="@dimen/shop_info_vertical_margin"
            android:background="@drawable/shape_round_corners"
            android:elevation="@dimen/card_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/shop_info_horizontal_margin"
                    android:layout_marginEnd="@dimen/shop_between_text_margin"
                    android:gravity="bottom"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:text="고로고로"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/shop_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:text="일식"
                    android:textColor="@color/black"
                    android:gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_toEndOf="@id/shop_name"/>

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_favorite_border_black_24dp"
                    android:layout_toStartOf="@+id/shop_like"/>

                <TextView
                    android:id="@+id/shop_like"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="30"
                    android:textColor="@color/black"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="@dimen/text_margin"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/indicator"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="@dimen/shop_info_horizontal_margin"
                android:layout_marginEnd="@dimen/shop_info_horizontal_margin"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/shop_info_vertical_margin"
                android:layout_marginStart="@dimen/shop_info_horizontal_margin"
                android:layout_marginEnd="@dimen/shop_info_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_16dp" />

                <TextView
                    style="@style/shop_text_style"
                    android:text="@string/shop_number"/>

                <TextView
                    android:id="@+id/shop_calling_number"
                    style="@style/shop_call_number_text_style"
                    android:text="@string/sample_number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/shop_info_vertical_margin"
                android:layout_marginStart="@dimen/shop_info_horizontal_margin"
                android:layout_marginEnd="@dimen/shop_info_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_16dp" />

                <TextView
                    style="@style/shop_text_style"
                    android:text="@string/shop_address"/>

                <TextView
                    android:id="@+id/shop_address"
                    style="@style/shop_text_style"
                    android:text="@string/sample_number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/shop_info_vertical_margin"
                android:layout_marginStart="@dimen/shop_info_horizontal_margin"
                android:layout_marginEnd="@dimen/shop_info_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_16dp" />

                <TextView
                    style="@style/shop_text_style"
                    android:text="@string/shop_business_time"/>

                <TextView
                    android:id="@+id/shop_business_hours"
                    style="@style/shop_text_style"
                    android:text="@string/sample_number"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/shop_info_vertical_margin"
                android:layout_marginStart="@dimen/shop_info_horizontal_margin"
                android:layout_marginEnd="@dimen/shop_info_horizontal_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_expand_16dp" />

                <TextView
                    style="@style/shop_text_style"
                    android:text="@string/shop_average_price"/>

                <TextView
                    android:id="@+id/shop_average_prices"
                    style="@style/shop_text_style"
                    android:text="@string/sample_number"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/shop_info_horizontal_margin"
                android:text="@string/shop_filter_list"
                android:textColor="@color/shop_text_color"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/shop_info_horizontal_margin">
                
                <TextView
                    style="@style/shop_filter_text_style"
                    android:text="일식"/>

                <TextView
                    style="@style/shop_filter_text_style"
                    android:text="일식"/>

                <TextView
                    style="@style/shop_filter_text_style"
                    android:text="일식"/>
            </LinearLayout>

        </LinearLayout>

        <com.nhn.android.maps.NMapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/info_layout"
            android:layout_marginStart="@dimen/shop_info_horizontal_margin"
            android:layout_marginEnd="@dimen/shop_info_horizontal_margin"/>


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>